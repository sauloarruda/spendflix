{
  "tasks": {
    "build": {
      "outputs": [".serverless/**", ".next/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false
    },
    "test": {
      "outputs": [],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build"]
    },
    "generate:types": {
      "dependsOn": ["build"],
      "outputs": ["apps/web/types/api.d.ts", "services/auth/types/api.d.ts"]
    }
  },
  "globalDependencies": ["pnpm-lock.yaml"]
}
