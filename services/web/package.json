{
	"name": "spendflix-web",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"generate:api": "openapi-generator-cli generate -g typescript-fetch -i ../../services/auth/openapi.yaml -o ./src/lib/api/generated --additional-properties=typescriptThreePlus=true,supportsES6=true,withInterfaces=true",
		"predev": "npm run generate:api",
		"prebuild": "npm run generate:api",
		"dev": "svelte-kit sync && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"test:headed": "HEADLESS=false playwright test",
		"test:local": "HEADLESS=false playwright test"
	},
	"devDependencies": {
		"@openapitools/openapi-generator-cli": "^2.25.1",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@types/node": "^24.10.1",
		"@eslint/js": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"autoprefixer": "^10.4.16",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"playwright": "^1.56.1",
		"postcss": "^8.4.32",
		"preline": "^3.2.3",
		"prettier": "^3.3.0",
		"prettier-plugin-svelte": "^3.2.0",
		"svelte": "^5.0.0",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.0",
		"typescript": "^5.0.0",
		"vite": "^5.0.0"
	},
	"type": "module",
	"dependencies": {
		"svelte-i18n": "^4.0.1"
	}
}
