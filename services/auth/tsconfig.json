{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": ".serverless/build",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "paths": {
      "@prisma": ["./generated/prisma"],
      "@lib": ["./lib"]
    }
  },
  "include": ["src/**/*", "lib/**/*", "tests/**/*"],
  "exclude": ["node_modules", ".serverless", "coverage"]
}
