{
  "name": "spendflix-services-transactions",
  "author": "Saulo Arruda",
  "packageManager": "pnpm@10.9.0",
  "license": "CC-BY-NC-4.0",
  "scripts": {
    "dev": "sls offline start --reloadHandler",
    "build": "serverless package",
    "build:watch": "pnpm tsc --watch",
    "deploy": "serverless deploy --stage v1",
    "test": "LOG_LEVEL=fatal jest --config jest.config.ts",
    "test:watch": "jest --config jest.config.ts --watch --coverage",
    "test:coverage": "LOG_LEVEL=fatal jest --config jest.config.ts --coverage && open coverage/lcov-report/index.html",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "generate:types": "openapi-typescript ../auth/openapi.yaml --output ./src/types/api.d.ts",
    "prisma:generate": "cd ../../database && pnpm prisma generate && cd ../services/transactions",
    "prisma:migrate": "cd ../../database && pnpm prisma migrate deploy && cd ../services/transactions"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.470.0",
    "@prisma/client": "6.7.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.4.9",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.7.0",
    "serverless": "^4.14.1",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@quramy/prisma-fabbrica": "^2.2.3",
    "@serverless/typescript": "^4.11.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/node": "^22.15.2",
    "@types/supertest": "^6.0.3",
    "@types/yamljs": "^0.2.34",
    "esbuild": "^0.25.3",
    "jest": "^29.7.0",
    "openapi-typescript": "^7.6.1",
    "serverless-esbuild": "^1.55.0",
    "serverless-offline": "^14.4.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}
