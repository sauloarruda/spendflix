{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "@auth/types/*": ["services/auth/src/types/*"]
    }
  },
  "include": ["services/**/*", "apps/**/*"]
}
