{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/auth/types/*": ["apps/web/lib/types/*"],
      "@/dau/*": ["apps/web/lib/dau/*"],
      "@/components/*": ["apps/web/components/*"]
    }
  },
  "include": ["services/**/*", "apps/**/*"]
}
