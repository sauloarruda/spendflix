{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "paths": {
      "@/prisma": ["../database/generated/prisma"],
      "@/fabbrica": ["../database/src/__generated__/fabbrica"],
      "@/*": ["./*"]
    },
    "outDir": "dist",
    "declaration": true,
    "strict": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
